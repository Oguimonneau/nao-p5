{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

    {#{% if error %}#}
        {#<div>{{ error|trans({}, 'FOSUserBundle') }}</div>#}
    {#{% endif %}#}


    {#==================================================#}
    {#Global Page Section Start#}
    {#=================================================#}
    <section class="global-page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <h2>Inscription</h2>
                        <ol class="breadcrumb">
                            <li>
                                <a href="index.html">
                                    <i class="ion-ios-home"></i>
                                    Home
                                </a>
                            </li>
                            <li class="active">Inscription</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="FOSUser-section">
        <div class="container">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal col-lg-12'}}) }}
            <div class="form-group">
                <input type="hidden" name="_csrf_token" value="" />
            </div>
            <div class="row">
                <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".6s">
                    <div class="col-lg-3"></div>
                    <label for="username" class="col-lg-3 control-label">Nom d'utilisateur</label>
                    <div class="col-lg-3">
                        {{ form_widget(form.username, { 'atrr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
            <div class="row">
                <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".8s">
                    <div class="col-lg-3"></div>
                    <label for="email" class="col-lg-3 control-label">email</label>
                    <div class="col-lg-3">
                        {{ form_widget(form.email, { 'atrr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
            <div class="row">
                <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1s">
                    <div class="col-lg-3"></div>
                    <label for="pasword" class="col-lg-3 control-label">Mot de passe</label>
                    <div class="col-lg-3">
                        {{ form_widget(form.plainPassword.first, { 'atrr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
            <div class="row">
                <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.2s">
                    <div class="col-lg-3"></div>
                    <label for="pasword" class="col-lg-3 control-label">Repetez</label>
                    <div class="col-lg-3">
                        {{ form_widget(form.plainPassword.second, { 'atrr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
            <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.4s">
                <div class="col-lg-3"></div>
                <div class="col-lg-3"></div>
                <div class="col-lg-3"><input type="submit" class="pull-right btn btn-default btn-send" id="_submit" name="_submit" value="S'inscrire" /></div>
                <div class="col-lg-3"></div>
            </div>
        {{ form_end(form) }}
        </div>
    </section>
{% endblock fos_user_content %}
