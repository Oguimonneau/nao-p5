{% extends "FOSUserBundle::layout.html.twig" %}
 
{% block fos_user_content %}
    <section class="global-page-header global-page-header-front">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <h2>Connectez-vous</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
<section id="FOSUser-section">
    {% if error %}
        <div class = "alert alert-danger">{{ error.message|trans({}, 'messages') }}</div>
    {% endif %}
    <div class="container">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal col-lg-12" >
            <div class="row">
                <div class="form-group">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                </div>
                <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".6s">
                    <div class="col-lg-3"></div>
                    <label for="username" class="col-lg-3 control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="col-lg-3">
                        <input type="text" id="username" name="_username" placeholder="Nom d'utilisateur"   class="form-control"/>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
            <div class="row">
                <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".8s">
                    <div class="col-lg-3"></div>
                    <label for="password" class="col-lg-3 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="col-lg-3">
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe"/>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
            <div class="row">
                <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1s">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-3"></div>
                    <div class="col-lg-3">
                        <label for="remember_me" class="control-label">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    </div>
                    {#<div class="col-lg-3"></div>#}
                </div>
            </div>
            <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.2s">
                <div class="col-lg-3"></div>
                <div class="col-lg-3"></div>
                <div class="col-lg-3"><input type="submit" class="pull-right btn btn-send" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" /></div>
                <div class="col-lg-3"></div>
            </div>
        </form>
    </div>
</section>
{% endblock fos_user_content %}
