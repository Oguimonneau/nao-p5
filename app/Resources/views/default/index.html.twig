{% extends 'base.html.twig' %}

{% block body %}
    <img  class="img-home" src="{{ asset('images/Image1.jpg') }}">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="home_text">
                    <!-- TITLE AND DESC -->
                    <div class="download-btn">
                        <!-- BUTTON -->
                        <button type="button" class="btn btn-success ">Faire une observation</button>
                        <button type="button" class="btn btn-warning ">Trouver une espèce</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Les derniers spécimens observés</h3>
                    </div>
                    <div class="panel-body">
                        <img  class="img-home" src="{{ asset('images/Image2.jpg') }}">
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Découvrez l'association</h3>
                    </div>
                    <div class="panel-body">
                        <img  class="img-home" src="{{ asset('images/Image3.jpg') }}">
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Soyez informés</h3>
                    </div>
                    <div class="panel-body">
                        <center>
                            <p>Abonnez-vous à notre newsletter !<br>
                            Et recevez les dernières actus de l'association<br><br>
                            </p>
                        </center>
                        <form class="form-horizontal">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <input type="text" class="form-control" id="text" placeholder="Votre email">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="pull-left btn btn-success">Inscription</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

